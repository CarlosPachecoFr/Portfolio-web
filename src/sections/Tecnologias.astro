---
import TarjetaTecnologias from "../components/TarjetaTecnologias.astro";
const tarjetas = [
    {
        titulo: "Frontend",
        tecnologias: [
            {nombre: "HTML", img: "/assets/html.svg"},
            {nombre: "CSS", img: "/assets/css.svg"},
            {nombre: "Angular", img: "/assets/angular.svg"},
            {nombre: "TailwindCSS", img: "/assets/tailwindcss.svg"},
            {nombre: "Bootstrap", img: "/assets/bootstrap.svg"},
            {nombre: "TypeScript", img: "/assets/typescript.svg"},
            {nombre: "JavaScript", img: "/assets/javascript.svg"},
            { img: "/assets/astroLogo.svg", nombre: "Astro" },
        ]
    },
    {
        titulo: "Backend",
        tecnologias: [
            {nombre: "Java", img: "/assets/java.svg"},
            {nombre: "Spring Boot", img: "/assets/spring-boot.svg"},
            {nombre: "MySQL", img: "/assets/mysql.svg"},
            {nombre: "Oracle", img: "/assets/oracle-letras.svg"},
            {nombre: "Maven", img: "/assets/maven.svg"},
            {nombre: "JWT", img: "/assets/jwt.png"},
        ]
    },
    {
        titulo: "Herramientas",
        tecnologias: [
            {nombre: "Git", img: "/assets/git.svg"},
            {nombre: "GitHub", img: "/assets/github.svg"},
            {nombre: "Docker", img: "/assets/docker.svg"},
            {nombre: "VSCode", img: "/assets/vscode.svg"},
            {nombre: "Eclipse", img: "/assets/eclipse.svg"},
            {nombre: "Firebase", img: "/assets/firebase.svg"},
            {nombre: "npm", img: "/assets/npm.svg"},
            {nombre: "OpenAI", img: "/assets/openai.svg"},
        ]
    }
]
---

<section id="tecnologias">
    <div>
        <div class="flex flex-col items-center justify-center px-10">
            <p class="text-[30px] font-bold drop-shadow-[0_0_8px_rgba(51,206,51,0.6)] mt-20">Tecnologías</p>
            <div class="border-b-4 border-b-[#33CE33] w-15 mt-5"></div>
            <p class="text-center text-sm sm:text-lg leading-relaxed mt-5 mb-8 text-gray-500">En mi viaje por el mundo del desarrollo web, he cultivado experiencia y habilidades en una variedad de tecnologías. Mi stack tecnológico incluye:</p>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10 md:px-20 mb-24">
            {tarjetas.map(tarjeta => (
                <TarjetaTecnologias titulo={tarjeta.titulo} tecnologias={tarjeta.tecnologias} />
            ))}
        </div>
    </div>
</section>
---
// @ts-nocheck
const { puesto, empresa, fecha, modalidad, localizacion,descripcion, tecnologias } = Astro.props;
---
<div class="relative pl-12 mb-10 group">
    <div class="absolute left-[15px] w-3 h-3 bg-[#22CA22] rounded-full border-2 border-white z-10 mt-5 transition-all duration-300 group-hover:scale-125 group-hover:bg-[#1DB01D] group-hover:shadow-lg group-hover:shadow-green-300/50"></div>
    <div class="absolute left-5 top-0 bottom-0 w-[2px] bg-[#B7EAB7] mt-5 transition-all duration-300 group-hover:bg-[#22CA22] group-hover:shadow-sm group-hover:shadow-green-300/30"></div>
    <div class="shadow-lg rounded-xl bg-white p-6 mr-6 relative z-20 mt-5 transition-all duration-300 ease-out hover:scale-[1.02] hover:shadow-xl hover:-translate-y-1 hover:bg-gradient-to-br hover:from-white hover:to-green-50/30">
        <div>
            <div>
                <p class="font-bold text-xl">{ puesto }</p>
                <p class="text-[16px] font-semibold text-[#1DC91D] py-1 transition-all duration-300 group-hover:text-[#16B016]">{ empresa }</p>
            </div>
            <div class="text-[14px] text-gray-500">
                <p class="py-1 transition-colors duration-300 group-hover:text-gray-600">{ fecha }</p>
            </div>
            <div class="flex items-center text-[14px] text-gray-500 pb-2">
                <p class="py-1 transition-colors duration-300 group-hover:text-gray-600">{ localizacion }</p>
                <div class="ml-1 p-1 bg-gray-200 rounded-lg transition-all duration-300 group-hover:bg-green-100 group-hover:text-green-700">
                    <p>{ modalidad }</p>
                </div>
            </div>
        </div>
        <div class="text-[17px] text-gray-600 transition-colors duration-300 group-hover:text-gray-700">
            <p class="text-justify">{ descripcion }</p>
        </div>
        <div class="grid grid-cols-3 md:grid-cols-6 lg:grid-cols-12 gap-2 mt-3">
            {tecnologias.map(tecnologia => (
                <div class="bg-[#E7F8E7] border-1 border-[#BEEEBE] text-[#52D552] flex items-center justify-center p-1 text-[12px] rounded-lg">
                    <img class="w-5 h-5" src={ tecnologia.img } alt={ tecnologia.nombre }>
                    <p class="pl-1 truncate font-semibold">{ tecnologia.nombre }</p>
                </div>
            ))}
        </div>
    </div>
</div>